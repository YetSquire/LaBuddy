<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Background Overlay (visible only when needed) -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:visibility="gone" />

    <!-- Waiting Instructions TextView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:padding="16dp"
        android:text="Available instructions: Hello, Exit, Wake, Sleep, Clear"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <!-- Waiting Instructions TextView -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waiting for Instructions"
        android:padding="16dp"
        android:textSize="18sp"
        android:textColor="@android:color/white" />

    <!-- EditText (bordered) -->
    <TextView
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:text=""
        android:padding="16dp"
        android:background="@drawable/border"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:textColor="@android:color/white" />

    <!-- Output TextView (bordered) -->
    <TextView
        android:id="@+id/outputText"
        android:layout_width="match_parent"
        android:layout_height="477dp"
        android:text="Output here"
        android:padding="16dp"
        android:background="@drawable/border"
        android:textSize="16sp"
        android:textColor="@android:color/white" />
</LinearLayout>
